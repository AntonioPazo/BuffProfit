    <div class="cm-create-match-content">
        <!-- Header -->
        <div class="cm-content-header">
            <div class="cm-header-content">
                <h1 class="cm-page-title">CREATE NEW MATCH</h1>
                <p class="cm-page-subtitle">Set up your match parameters and invite players to compete</p>
            </div>
            <a href="/matchfinder" class="cm-back-btn">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Matchfinder</span>
            </a>
        </div>

        <!-- Form -->
        <div class="cm-form-container">
            <form id="createMatchForm" action="/process-create-match" method="POST">
                <!-- Match Format Section -->
                <div class="cm-form-section">
                    <div class="cm-section-header">
                        <h3 class="cm-section-title">
                            <i class="fas fa-gamepad"></i>
                            Match Format
                        </h3>
                        <p class="cm-section-subtitle">Choose your preferred game mode and format</p>
                    </div>

                    <div class="cm-form-grid">
                        <div class="cm-form-group">
                            <label class="cm-form-label">Team Size</label>
                            <div class="cm-radio-grid">
                                <div class="cm-radio-item">
                                    <input type="radio" id="1vs1" name="mode" value="1vs1" checked>
                                    <label for="1vs1" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-user"></i>
                                            <span>1vs1</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="cm-radio-item">
                                    <input type="radio" id="2vs2" name="mode" value="2vs2">
                                    <label for="2vs2" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-users"></i>
                                            <span>2vs2</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="cm-radio-item">
                                    <input type="radio" id="3vs3" name="mode" value="3vs3">
                                    <label for="3vs3" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-users"></i>
                                            <span>3vs3</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="cm-radio-item">
                                    <input type="radio" id="5vs5" name="mode" value="5vs5">
                                    <label for="5vs5" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-users"></i>
                                            <span>5vs5</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="cm-form-group">
                            <label class="cm-form-label">Map</label>
                            <div class="cm-radio-grid">
                                <div class="cm-radio-item">
                                    <input type="radio" id="grieta" name="map" value="Grieta del Invocador" checked>
                                    <label for="grieta" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-map"></i>
                                            <span>Grieta del Invocador</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="cm-radio-item">
                                    <input type="radio" id="aram" name="map" value="ARAM">
                                    <label for="aram" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-bridge"></i>
                                            <span>ARAM</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="cm-form-group cm-full-width">
                            <label class="cm-form-label">Match Format</label>
                            <div class="cm-radio-grid">
                                <div class="cm-radio-item">
                                    <input type="radio" id="partida-completa" name="format" value="Partida completa" checked>
                                    <label for="partida-completa" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-trophy"></i>
                                            <span>Partida completa</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="cm-radio-item">
                                    <input type="radio" id="mejor-de-3" name="format" value="Mejor de 3">
                                    <label for="mejor-de-3" class="cm-radio-label">
                                        <div class="cm-radio-content">
                                            <i class="fas fa-medal"></i>
                                            <span>Mejor de 3</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Match Details Section -->
                <div class="cm-form-section">
                    <div class="cm-section-header">
                        <h3 class="cm-section-title">
                            <i class="fas fa-info-circle"></i>
                            Match Details
                        </h3>
                        <p class="cm-section-subtitle">Configure the specific details of your match</p>
                    </div>

                    <div class="cm-form-grid">
                        <div class="cm-form-group cm-full-width">
                            <label for="idGameLol" class="cm-form-label">
                                <i class="fas fa-gamepad"></i>
                                Game ID (Riot Game ID)
                            </label>
                            <input type="text" id="idGameLol" name="idGameLol" class="cm-form-input" placeholder="Enter the Riot Game ID" required>
                            <small class="cm-form-help">You can find this ID after creating a custom game in League of Legends</small>
                        </div>

                        <div class="cm-form-group">
                            <label for="creditos" class="cm-form-label">
                                <i class="fas fa-coins"></i>
                                Entry Fee (Credits)
                            </label>
                            <input type="number" id="creditos" name="creditos" class="cm-form-input" min="0" step="0.01" value="5" max="<%= userCreditos %>">
                            <small class="cm-form-help">Maximum: <%= userCreditos.toFixed(2) %> credits</small>
                        </div>

                        <div class="cm-form-group">
                            <label for="region" class="cm-form-label">
                                <i class="fas fa-globe"></i>
                                Region
                            </label>
                            <select id="region" name="region" class="cm-form-select">
                                <option value="euw">EUW</option>
                                <option value="eune">EUNE</option>
                                <option value="na" selected>NA</option>
                                <option value="kr">KR</option>
                                <option value="japan">Japan</option>
                                <option value="br">BR</option>
                                <option value="lan">LAN</option>
                                <option value="las">LAS</option>
                                <option value="oce">OCE</option>
                                <option value="ru">RU</option>
                                <option value="tr">TR</option>
                            </select>
                        </div>

                        <div class="cm-form-group">
                            <label for="skill_level" class="cm-form-label">
                                <i class="fas fa-star"></i>
                                Skill Level
                            </label>
                            <select id="skill_level" name="skill_level" class="cm-form-select">
                                <option value="Unranked">Unranked</option>
                                <option value="Iron">Iron</option>
                                <option value="Bronze">Bronze</option>
                                <option value="Silver">Silver</option>
                                <option value="Gold" selected>Gold</option>
                                <option value="Platinum">Platinum</option>
                                <option value="Emerald">Emerald</option>
                                <option value="Diamond">Diamond</option>
                                <option value="Master">Master</option>
                                <option value="Grand Master">Grand Master</option>
                                <option value="Challenger">Challenger</option>
                            </select>
                        </div>

                        <div class="cm-form-group">
                            <label for="matchDate" class="cm-form-label">
                                <i class="fas fa-calendar"></i>
                                Match Date
                            </label>
                            <input type="date" id="matchDate" name="matchDate" class="cm-form-input" required>
                        </div>

                        <div class="cm-form-group">
                            <label for="matchTime" class="cm-form-label">
                                <i class="fas fa-clock"></i>
                                Match Time
                            </label>
                            <input type="time" id="matchTime" name="matchTime" class="cm-form-input" required>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="cm-form-actions">
                    <button type="submit" class="cm-btn cm-btn-primary">
                        <i class="fas fa-plus"></i>
                        <span>Create Match</span>
                    </button>
                    <button type="button" class="cm-btn cm-btn-outline" onclick="window.location.href='/matchfinder'">
                        <i class="fas fa-times"></i>
                        <span>Cancel</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set default date to today
        const today = new Date();
        const formattedDate = today.toISOString().substr(0, 10);
        document.getElementById('matchDate').value = formattedDate;
        
        // Form submission
        document.getElementById('createMatchForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            
            // Show loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Creating...</span>';
            submitBtn.disabled = true;
            
            // Recopilar datos del formulario
            const formData = new FormData(this);
            const formDataObj = {};
            formData.forEach((value, key) => {
                formDataObj[key] = value;
            });
            
            try {
                const response = await fetch('/process-create-match', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formDataObj),
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (response.ok && !data.err) {
                    // Success animation
                    submitBtn.innerHTML = '<i class="fas fa-check"></i><span>Success!</span>';
                    submitBtn.style.background = 'linear-gradient(135deg, #22c55e, #16a34a)';
                    
                    setTimeout(() => {
                        window.location.href = '/matchfinder';
                    }, 1000);
                } else {
                    throw new Error(data.errmsg || 'Unknown error');
                }
            } catch (error) {
                console.error('Error:', error);
                
                // Error state
                submitBtn.innerHTML = '<i class="fas fa-exclamation-triangle"></i><span>Error</span>';
                submitBtn.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                
                alert('Error creating match: ' + error.message);
                
                // Reset button after 2 seconds
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.style.background = '';
                    submitBtn.disabled = false;
                }, 2000);
            }
        });
        
        // Form animations
        const formGroups = document.querySelectorAll('.cm-form-group');
        formGroups.forEach((group, index) => {
            group.style.opacity = '0';
            group.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                group.style.transition = 'all 0.5s ease';
                group.style.opacity = '1';
                group.style.transform = 'translateY(0)';
            }, index * 100);
        });
    });
</script>

