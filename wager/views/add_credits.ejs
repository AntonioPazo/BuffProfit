<script src="https://www.paypal.com/sdk/js?client-id=ATiToZ1rnrcrLQRNpWZIp6gCbtGB6HWLyr8mLkOodHLys3Xa06m5U_FIgGXlB8w1Tj818yEXv83Zn8G-&currency=EUR"></script>
<script>
    function updatePrice() {
        const creditsAmount = parseInt(document.getElementById('creditsAmount').value) || 0;
        const euroAmount = (creditsAmount / 100).toFixed(2);
        
        document.getElementById('euroAmount').value = euroAmount;
        document.getElementById('summaryCredits').textContent = creditsAmount;
        document.getElementById('summaryPrice').textContent = euroAmount + '‚Ç¨';
        document.getElementById('summaryTotal').textContent = (<%= userCreditos %> + creditsAmount).toFixed(2);
    }
    
    function selectPackage(credits, euros) {
        document.getElementById('creditsAmount').value = credits;
        document.getElementById('euroAmount').value = euros.toFixed(2);
        updatePrice();
        
        // A√±adir efecto visual
        const packages = document.querySelectorAll('.ac-package-item');
        packages.forEach(pkg => {
            pkg.classList.remove('ac-package-selected');
        });
        
        // Encontrar el paquete seleccionado y a√±adir clase
        packages.forEach(pkg => {
            if (pkg.querySelector('.ac-package-credits').textContent.includes(credits)) {
                pkg.classList.add('ac-package-selected');
            }
        });
    }
    
    function adjustCredits(amount) {
        const input = document.getElementById('creditsAmount');
        let value = parseInt(input.value) || 0;
        value += amount;
        
        // Asegurar m√≠nimo de 100
        if (value < 100) value = 100;
        
        input.value = value;
        updatePrice();
    }
    
    // Inicializar PayPal
    paypal.Buttons({
        style: {
            color: 'blue',
            shape: 'pill',
            label: 'pay',
            height: 40
        },
        createOrder: function(data, actions) {
            const euroAmount = document.getElementById('euroAmount').value;
            const creditsAmount = document.getElementById('creditsAmount').value;
            
            if (creditsAmount < 100) {
                alert('La cantidad m√≠nima es 100 cr√©ditos');
                return;
            }
            
            return fetch('/paypal/create-credits-payment', {
                method: 'post',
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    value: euroAmount,
                    credits: creditsAmount
                })
            }).then(function(response) {
                return response.json();
            }).then(function(order) {
                if (order.err) {
                    alert('Error: ' + order.errmsg);
                    return;
                }
                return order.id;
            });
        },
        onApprove: function(data, actions) {
            // Mostrar indicador de carga
            document.body.classList.add('ac-loading');
            
            return fetch('/paypal/capture-credits-payment', {
                method: 'post',
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    orderID: data.orderID
                })
            }).then(function(response) {
                return response.json();
            }).then(function(details) {
                // Ocultar indicador de carga
                document.body.classList.remove('ac-loading');
                
                if (details.success) {
                    // Mostrar mensaje de √©xito
                    showSuccessMessage('¬°Pago completado! Tus cr√©ditos han sido a√±adidos a tu cuenta.');
                    
                    // Recargar despu√©s de 2 segundos
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    showErrorMessage('Error procesando el pago: ' + details.errmsg);
                }
            });
        },
        onError: function(err) {
            console.error('PayPal Error:', err);
            showErrorMessage('Error en el proceso de pago. Por favor, int√©ntalo de nuevo.');
        }
    }).render('#paypal-button-container');
    
    // Funci√≥n para mostrar mensaje de √©xito
    function showSuccessMessage(message) {
        const messageElement = document.createElement('div');
        messageElement.className = 'ac-message ac-message-success';
        messageElement.innerHTML = `
            <div class="ac-message-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="ac-message-content">
                <div class="ac-message-title">¬°√âxito!</div>
                <div class="ac-message-text">${message}</div>
            </div>
        `;
        document.body.appendChild(messageElement);
        
        setTimeout(() => {
            messageElement.classList.add('ac-message-show');
        }, 100);
        
        setTimeout(() => {
            messageElement.classList.remove('ac-message-show');
            setTimeout(() => {
                document.body.removeChild(messageElement);
            }, 300);
        }, 5000);
    }
    
    // Funci√≥n para mostrar mensaje de error
    function showErrorMessage(message) {
        const messageElement = document.createElement('div');
        messageElement.className = 'ac-message ac-message-error';
        messageElement.innerHTML = `
            <div class="ac-message-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="ac-message-content">
                <div class="ac-message-title">Error</div>
                <div class="ac-message-text">${message}</div>
            </div>
        `;
        document.body.appendChild(messageElement);
        
        setTimeout(() => {
            messageElement.classList.add('ac-message-show');
        }, 100);
        
        setTimeout(() => {
            messageElement.classList.remove('ac-message-show');
            setTimeout(() => {
                document.body.removeChild(messageElement);
            }, 300);
        }, 5000);
    }
    
    // A√±adir estilos para mensajes y loading
    document.head.insertAdjacentHTML('beforeend', `
        <style>
            .ac-loading::after {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(5px);
                z-index: 9999;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            .ac-loading::before {
                content: '';
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 50px;
                height: 50px;
                border: 5px solid rgba(255, 255, 255, 0.3);
                border-radius: 50%;
                border-top-color: #dd6bfa;
                z-index: 10000;
                animation: ac-spin 1s linear infinite;
            }
            
            @keyframes ac-spin {
                to { transform: translate(-50%, -50%) rotate(360deg); }
            }
            
            .ac-message {
                position: fixed;
                bottom: 30px;
                right: 30px;
                display: flex;
                align-items: center;
                gap: 15px;
                background: white;
                border-radius: 12px;
                padding: 15px 20px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
                transform: translateY(100px);
                opacity: 0;
                transition: all 0.3s ease;
                z-index: 9999;
                max-width: 400px;
            }
            
            .ac-message-show {
                transform: translateY(0);
                opacity: 1;
            }
            
            .ac-message-icon {
                font-size: 24px;
            }
            
            .ac-message-success .ac-message-icon {
                color: #22c55e;
            }
            
            .ac-message-error .ac-message-icon {
                color: #ef4444;
            }
            
            .ac-message-content {
                flex: 1;
            }
            
            .ac-message-title {
                font-weight: 700;
                font-size: 16px;
                margin-bottom: 5px;
                color: #1f2937;
            }
            
            .ac-message-text {
                font-size: 14px;
                color: #4b5563;
            }
            
            .ac-package-selected {
                border: 2px solid #dd6bfa;
                box-shadow: 0 8px 25px rgba(221, 107, 250, 0.3);
                transform: translateY(-2px);
            }
        </style>
    `);
    
    // Inicializar
    document.addEventListener('DOMContentLoaded', function() {
        updatePrice();
        
        // Animaci√≥n de entrada para las tarjetas
        const cards = document.querySelectorAll('.ac-content-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.6s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, (index + 1) * 150);
        });
    });
</script>

