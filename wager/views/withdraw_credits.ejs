        <!-- Formulario de Retirada -->
        <div class="wc-withdrawal-form">
            <form id="withdrawalForm">
                <!-- Secci√≥n de Detalles -->
                <div class="wc-content-card">
                    <div class="wc-card-header">
                        <h3 class="wc-card-title">
                            <i class="fas fa-calculator"></i>
