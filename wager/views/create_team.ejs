<%- include('partials/header', { title: 'Crear Equipo', username: username }) %>

<div class="ctf-main-container">
    <div class="ctf-content-wrapper">
        <!-- Background Effects -->
        <div class="ctf-bg-effects">
            <div class="ctf-gradient-orb-1"></div>
            <div class="ctf-gradient-orb-2"></div>
            <div class="ctf-gradient-orb-3"></div>
        </div>
        
        <!-- Error Alert -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="ctf-alert ctf-alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <span><%= error %></span>
            </div>
        <% } %>
        
        <!-- Header -->
        <div class="ctf-page-header">
            <div class="ctf-header-content">
                <h1 class="ctf-page-title">CREAR NUEVO EQUIPO</h1>
                <p class="ctf-page-subtitle">Forma tu equipo de ensueño y conquista la competencia</p>
            </div>
            <a href="/tournament" class="ctf-back-button">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a Torneos</span>
            </a>
        </div>
        
        <!-- Form Container -->
        <div class="ctf-form-container">
            <div class="ctf-form-card">
                <div class="ctf-form-header">
                    <div class="ctf-form-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h2 class="ctf-form-title">Información del Equipo</h2>
                    <p class="ctf-form-description">Completa los detalles para crear tu equipo profesional</p>
                </div>
                
                <form id="createTeamForm" action="/create-team" method="POST" enctype="multipart/form-data" class="ctf-form">
                    <!-- Team Name & Tag Row -->
                    <div class="ctf-form-row">
                        <div class="ctf-form-group">
                            <label for="team_name" class="ctf-form-label">
                                <i class="fas fa-flag"></i>
                                Nombre del Equipo
                            </label>
                            <div class="ctf-input-wrapper">
                                <input type="text" id="team_name" name="team_name" class="ctf-form-input" placeholder="Ingresa el nombre del equipo" required>
                                <div class="ctf-input-focus-ring"></div>
                            </div>
                            <small class="ctf-form-help">
                                <i class="fas fa-info-circle"></i>
                                El nombre debe tener al menos 3 caracteres
                            </small>
                        </div>
                        
                        <div class="ctf-form-group">
                            <label for="team_tag" class="ctf-form-label">
                                <i class="fas fa-tag"></i>
                                Tag del Equipo
                            </label>
                            <div class="ctf-input-wrapper">
                                <input type="text" id="team_tag" name="team_tag" class="ctf-form-input" placeholder="TAG" maxlength="5" minlength="2" required>
                                <div class="ctf-input-focus-ring"></div>
                                <div class="ctf-tag-counter">
                                    <span id="tagCounter">0</span>/5
                                </div>
                            </div>
                            <small class="ctf-form-help">
                                <i class="fas fa-info-circle"></i>
                                2-5 caracteres, aparecerá junto al nombre
                            </small>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <div class="ctf-form-group ctf-form-group-full">
                        <label for="team_description" class="ctf-form-label">
                            <i class="fas fa-align-left"></i>
                            Descripción del Equipo
                        </label>
                        <div class="ctf-textarea-wrapper">
                            <textarea id="team_description" name="team_description" class="ctf-form-textarea" placeholder="Describe tu equipo, objetivos, requisitos y estilo de juego..." rows="4"></textarea>
                            <div class="ctf-textarea-focus-ring"></div>
                            <div class="ctf-char-counter">
                                <span id="descCounter">0</span>/500
                            </div>
                        </div>
                        <small class="ctf-form-help">
                            <i class="fas fa-info-circle"></i>
                            Describe tu equipo, objetivos, requisitos, etc.
                        </small>
                    </div>
                    
                    <!-- Captain Role -->
                    <div class="ctf-form-group ctf-form-group-full">
                        <label for="captain_role" class="ctf-form-label">
                            <i class="fas fa-crown"></i>
                            Tu Rol en el Equipo
                        </label>
                        <div class="ctf-role-selector">
                            <div class="ctf-role-grid">
                                <div class="ctf-role-option" data-role="">
                                    <input type="radio" id="role_none" name="captain_role" value="" checked>
                                    <label for="role_none" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-question"></i>
                                        </div>
                                        <span class="ctf-role-name">Sin Rol</span>
                                        <span class="ctf-role-desc">Flexible</span>
                                    </label>
                                </div>
                                
                                <div class="ctf-role-option" data-role="Top">
                                    <input type="radio" id="role_top" name="captain_role" value="Top">
                                    <label for="role_top" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-shield-alt"></i>
                                        </div>
                                        <span class="ctf-role-name">Top</span>
                                        <span class="ctf-role-desc">Tank/Fighter</span>
                                    </label>
                                </div>
                                
                                <div class="ctf-role-option" data-role="Jungle">
                                    <input type="radio" id="role_jungle" name="captain_role" value="Jungle">
                                    <label for="role_jungle" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-tree"></i>
                                        </div>
                                        <span class="ctf-role-name">Jungle</span>
                                        <span class="ctf-role-desc">Ganker</span>
                                    </label>
                                </div>
                                
                                <div class="ctf-role-option" data-role="Mid">
                                    <input type="radio" id="role_mid" name="captain_role" value="Mid">
                                    <label for="role_mid" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-magic"></i>
                                        </div>
                                        <span class="ctf-role-name">Mid</span>
                                        <span class="ctf-role-desc">Mage/Assassin</span>
                                    </label>
                                </div>
                                
                                <div class="ctf-role-option" data-role="ADC">
                                    <input type="radio" id="role_adc" name="captain_role" value="ADC">
                                    <label for="role_adc" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-crosshairs"></i>
                                        </div>
                                        <span class="ctf-role-name">ADC</span>
                                        <span class="ctf-role-desc">Marksman</span>
                                    </label>
                                </div>
                                
                                <div class="ctf-role-option" data-role="Support">
                                    <input type="radio" id="role_support" name="captain_role" value="Support">
                                    <label for="role_support" class="ctf-role-label">
                                        <div class="ctf-role-icon">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <span class="ctf-role-name">Support</span>
                                        <span class="ctf-role-desc">Healer/Utility</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <small class="ctf-form-help">
                            <i class="fas fa-info-circle"></i>
                            Selecciona tu rol preferido. Seguirás siendo el capitán independientemente del rol elegido
                        </small>
                    </div>
                    
                    <!-- Team Logo -->
                    <div class="ctf-form-group ctf-form-group-full">
                        <label for="team_logo" class="ctf-form-label">
                            <i class="fas fa-image"></i>
                            Logo del Equipo
                        </label>
                        <div class="ctf-file-upload-area" id="fileUploadArea">
                            <input type="file" id="team_logo" name="team_logo" accept="image/*" class="ctf-file-input">
                            <div class="ctf-file-upload-content">
                                <div class="ctf-file-upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="ctf-file-upload-text">
                                    <span class="ctf-file-upload-main">Arrastra tu logo aquí o haz clic para seleccionar</span>
                                    <span class="ctf-file-upload-sub">PNG, JPG, GIF hasta 5MB</span>
                                </div>
                            </div>
                            <div class="ctf-file-preview" id="filePreview" style="display: none;">
                                <img id="previewImage" src="/placeholder.svg" alt="Preview">
                                <div class="ctf-file-info">
                                    <span id="fileName"></span>
                                    <button type="button" class="ctf-file-remove" id="removeFile">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <small class="ctf-form-help">
                            <i class="fas fa-info-circle"></i>
                            Formatos aceptados: JPG, PNG, GIF. Tamaño máximo: 5MB
                        </small>
                    </div>
                    
                    <!-- Form Actions -->
                    <div class="ctf-form-actions">
                        <button type="submit" class="ctf-btn ctf-btn-primary">
                            <span class="ctf-btn-text">Crear Equipo</span>
                            <i class="fas fa-plus ctf-btn-icon"></i>
                            <div class="ctf-btn-loading">
                                <i class="fas fa-spinner fa-spin"></i>
                            </div>
                        </button>
                        <a href="/tournament" class="ctf-btn ctf-btn-outline">
                            <i class="fas fa-times"></i>
                            <span>Cancelar</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Character counters
    const teamTagInput = document.getElementById('team_tag');
    const tagCounter = document.getElementById('tagCounter');
    const descriptionTextarea = document.getElementById('team_description');
    const descCounter = document.getElementById('descCounter');
    
    // Tag counter
    if (teamTagInput && tagCounter) {
        teamTagInput.addEventListener('input', function() {
            tagCounter.textContent = this.value.length;
            
            if (this.value.length >= 2 && this.value.length <= 5) {
                tagCounter.style.color = '#22c55e';
            } else {
                tagCounter.style.color = '#ef4444';
            }
        });
    }
    
    // Description counter
    if (descriptionTextarea && descCounter) {
        descriptionTextarea.addEventListener('input', function() {
            const length = this.value.length;
            descCounter.textContent = length;
            
            if (length <= 500) {
                descCounter.style.color = '#6b7280';
            } else {
                descCounter.style.color = '#ef4444';
                this.value = this.value.substring(0, 500);
                descCounter.textContent = '500';
            }
        });
    }
    
    // File upload functionality
    const fileUploadArea = document.getElementById('fileUploadArea');
    const fileInput = document.getElementById('team_logo');
    const filePreview = document.getElementById('filePreview');
    const previewImage = document.getElementById('previewImage');
    const fileName = document.getElementById('fileName');
    const removeFileBtn = document.getElementById('removeFile');
    
    // Drag and drop
    if (fileUploadArea) {
        fileUploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('ctf-dragover');
        });
        
        fileUploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('ctf-dragover');
        });
        
        fileUploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('ctf-dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFileSelect(files[0]);
            }
        });
    }
    
    // File input change
    if (fileInput) {
        fileInput.addEventListener('change', function() {
            if (this.files.length > 0) {
                handleFileSelect(this.files[0]);
            }
        });
    }
    
    // Remove file
    if (removeFileBtn) {
        removeFileBtn.addEventListener('click', function() {
            fileInput.value = '';
            filePreview.style.display = 'none';
            document.querySelector('.ctf-file-upload-content').style.display = 'block';
        });
    }
    
    function handleFileSelect(file) {
        // Validate file
        if (!file.type.match('image.*')) {
            alert('Solo se permiten archivos de imagen.');
            return;
        }
        
        if (file.size > 5 * 1024 * 1024) {
            alert('El archivo es demasiado grande. El tamaño máximo es 5MB.');
            return;
        }
        
        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
            previewImage.src = e.target.result;
            fileName.textContent = file.name;
            filePreview.style.display = 'flex';
            document.querySelector('.ctf-file-upload-content').style.display = 'none';
        };
        reader.readAsDataURL(file);
    }
    
    // Form validation and submission
    const createTeamForm = document.getElementById('createTeamForm');
    
    if (createTeamForm) {
        createTeamForm.addEventListener('submit', function(e) {
            const teamName = document.getElementById('team_name').value.trim();
            const teamTag = document.getElementById('team_tag').value.trim();
            const submitBtn = this.querySelector('button[type="submit"]');
            
            // Validate team name
            if (teamName.length < 3) {
                e.preventDefault();
                alert('El nombre del equipo debe tener al menos 3 caracteres.');
                document.getElementById('team_name').focus();
                return;
            }
            
            // Validate team tag
            if (teamTag.length < 2 || teamTag.length > 5) {
                e.preventDefault();
                alert('El tag del equipo debe tener entre 2 y 5 caracteres.');
                document.getElementById('team_tag').focus();
                return;
            }
            
            // Show loading state
            submitBtn.classList.add('ctf-loading');
            submitBtn.disabled = true;
        });
    }
    
    // Role selection animation
    const roleOptions = document.querySelectorAll('.ctf-role-option');
    roleOptions.forEach((option, index) => {
        option.style.opacity = '0';
        option.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            option.style.transition = 'all 0.5s ease';
            option.style.opacity = '1';
            option.style.transform = 'translateY(0)';
        }, index * 100 + 300);
    });
    
    // Form groups animation
    const formGroups = document.querySelectorAll('.ctf-form-group');
    formGroups.forEach((group, index) => {
        group.style.opacity = '0';
        group.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            group.style.transition = 'all 0.6s ease';
            group.style.opacity = '1';
            group.style.transform = 'translateY(0)';
        }, index * 150);
    });
});
</script>

<%- include('partials/footer') %>